<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="..\Build.props" />
  <PropertyGroup>
	<SourceDir>$([System.IO.Path]::GetDirectoryName($([System.IO.Path]::GetDirectoryName($(MSBuildThisFileFullPath)))))</SourceDir>
	<BuildDir>$(OutDir)</BuildDir>
	<BuildDir Condition="$(OutDir) == ''" >$(SourceDir).build\$(Configuration)-$(Platform)</BuildDir>
	<OutDir>$(BuildDir)\bin</OutDir>
	<OutputPath>$(OutDir)</OutputPath>
	<BaseIntermediateOutputPath>$(BuildDir)\obj\$(ProjectName)</BaseIntermediateOutputPath>
    <LibDir>$(SolutionDir)lib\</LibDir>
	<TestDir>$(BuildDir)\test-data</TestDir>
	<SetupWixproj>$(SourceDir)\setup\setup.wixproj</SetupWixproj>
	<NugetPackagesDir>$(SourceDir)\packages</NugetPackagesDir>
	<VersionInfoFile>..\CommonAssemblyInfo.cs</VersionInfoFile>
  </PropertyGroup>
</Project>
